.container
  h2
    = "Flights between #{date_range[:from]} and #{date_range[:to]}"
  table.table.table-dark 
    tr 
      th Origin 
      th Destination 
      th Duration
      th Price 
      th Flights
      th Amenities
    - trips.each do |res|
      tr
        td
          = res[:origin]
        td
          = res[:destination]
        td
          = res[:duration]
        td
          = res[:price]
        td
          - res[:flights].each do |flight|
            = "#{flight[:origin]} -> #{flight[:destination]}"
            br
        td
